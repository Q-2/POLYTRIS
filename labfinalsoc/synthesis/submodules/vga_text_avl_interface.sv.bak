.DrawY(DrawY)
);

//background colors
logic [11:0] BGD_REG [4];
assign BGD_REG[0] = 12'h777; //gray
assign BGD_REG[1] = 12'h000; //black
assign BGD_REG[2] = 12'hfff; //white
assign BGD_REG[3] = 12'h620; //red
logic [11:0] PIXEL_COLOR;

always_ff @(posedge VGA_CLK) begin
//board
	if ((DrawX > 240) && (DrawX < 400)) begin
		if (blank) begin
			red = PIXEL_COLOR[3:0];
			green = PIXEL_COLOR[7:4];
			blue = PIXEL_COLOR[11:8];
		end
		else begin
			red = 4'b0000;
			green = 4'b0000;
			blue = 4'b0000;
		end
	end
//board borders
	else if (((DrawX > 232) && (DrawX < 240)) || ((DrawX > 400) && (DrawX < 408))) begin
		red = 4'hc;
		blue = 4'hf;
		green = 4'hf; 
	end
 //score box
 	else if (((DrawX > 432) && (DrawX < 544)) && ((DrawY > 32) && (DrawY < 128))) begin
		if(blank) begin 
			if(FONT_PIXEL) begin
				red = 4'hf;
				blue = 4'hf;
				green = 4'hf;
			end
			else begin
				red = 4'h0;
				blue = 4'h0;
				green = 4'h0;
			end
		end
 		red = 4'h0;
 		blue = 4'h0;
 		green = 4'h0;
 	end
 //level box
 	else if (((DrawX > 432) && (DrawX < 528)) && ((DrawY > 304) && (DrawY < 352))) begin
 		red = 4'h0;
 		blue = 4'h0;
 		green = 4'h0;
 	end
 //stats box
 	else if (((DrawX > 62) && (DrawX < 192)) && ((DrawY > 128) && (DrawY < 432))) begin
 		red = 4'h0;
 		blue = 4'h0;
 		green = 4'h0;
 	end
//the rest of the background
	else begin
		red = 4'ha;
		blue = 4'ha;
		green = 4'ha;
	end
//next piece border
	if (((DrawX > 424) && (DrawX < 504)) && ((DrawY > 184) && (DrawY < 280))) begin
		red = 4'hc;
		blue = 4'hf;
		green = 4'hf;
	end
	else;
//next piece box
	if (((DrawX > 432) && (DrawX < 496)) && ((DrawY > 192) && (DrawY < 272))) begin
		red = 4'h0;
		blue = 4'h0;
		green = 4'h0;
	end
	else;
end

logic [5:0] SPRITE_ADDR;
logic [31:0] SPRITE_DATA;
logic [11:0] COLOR_0, COLOR_1, COLOR_2, COLOR_3;
logic [5:0] REGPOS_X, REGPOS_Y;

 //sandbox variables
logic [3:0] SANDBOX [4];
logic [4:0] SANDBOX_X;
logic [5:0] SANDBOX_Y;
logic [4:0] PIECE_LENGTH;
logic [1:0] PIECE_STYLE;

always_comb begin
//obtain board position
logic [8:0] BoardX, BoardY;

if ((REGPOS_X + 4 >= SANDBOX_X - 3 + 4) && (REGPOS_X  + 4 <= SANDBOX_X + 4) && (REGPOS_Y + 4 >= SANDBOX_Y - 3 + 4) && (REGPOS_Y + 4 <= SANDBOX_Y + 4)) begin
	PIECE_STYLE = (PIECE_LENGTH % 3) + 1;
	VGA_DATA = {PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE, PIECE_STYLE};
end
else VGA_DATA = LOCAL_REG[VGA_ADDR][19:0];

drawing piece_tile(.SPRITE_ADDR(SPRITE_ADDR), .SPRITE_DATA(SPRITE_DATA));	//TODO: fill in the level
palette level_colors(.LEVEL(), .COLOR_0(COLOR_0), .COLOR_1(COLOR_1), .COLOR_2(COLOR_2), .COLOR_3(COLOR_3)); //TODO: fill in the level

case (PIXEL_VAL)
	2'b00: PIXEL_COLOR = COLOR_0;
	2'b01: PIXEL_COLOR = COLOR_1;
	2'b10: PIXEL_COLOR = COLOR_2;
	2'b11: PIXEL_COLOR = COLOR_3;
endcase


//obtain score box position
logic [7:0] ScoreX, ScoreY;
ScoreX = DrawX - 448;
ScoreY = DrawY - 48;
SCOREPOS_X = ScoreX[8:4];
SCOREPOS_Y = ScoreY[8:4];
//printing the 'score' on screen
logic [7:0] SCORE_REG [20]; //TODO: get the actual score to display
SCORE_REG[0] = 8'h26;
SCORE_REG[1] = 8'h18;
SCORE_REG[2] = 8'h22;
SCORE_REG[3] = 8'h24;
SCORE_REG[4] = 8'h1a;
SCORE_REG[5] = 8'h27;
SCORE_REG[6] = 8'h19;
SCORE_REG[7] = 8'h23;
SCORE_REG[8] = 8'h25;
SCORE_REG[9] = 8'h1b;
SCORE_REG[10] = 8'h1e;
SCORE_REG[11] = 8'h22;
SCORE_REG[12] = 8'h26;
SCORE_REG[13] = 8'h1a;
SCORE_REG[14] = 8'h24;
SCORE_REG[15] = 8'h1f;
SCORE_REG[16] = 8'h23;
SCORE_REG[17] = 8'h27;
SCORE_REG[18] = 8'h1b;
SCORE_REG[19] = 8'h25;

logic [7:0] FONT_VAL;
logic FONT_PIXEL;
FONT_VAL = SCORE_REG[SCOREPOS_Y*5+SCOREPOS_X];
FONT_ADDR = {FONT_VAL[SCOREPOS_X[3:0]], SCOREPOS_Y[3:0]};
FONT_PIXEL = FONT_DATA[15-ScoreX[3:0]];

font_rom(
.addr(FONT_ADDR), 
.data(FONT_DATA)
);
end

